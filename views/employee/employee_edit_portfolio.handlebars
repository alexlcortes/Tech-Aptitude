                <input type="date" name="startDate">
              </fieldset>

              <fieldset class="form-group">
                <label class="profileLabels" for="projectEndDate">Project Ending Date</label>
                <br>
                <input type="date" name="endDate">
              </fieldset>

               <fieldset class="form-group">
                <label class="profileLabels" for="projectTextarea">Enter in Project Description(Max 250 Char)</label>
                <textarea class="form-control" name="description" rows="3"></textarea>
              </fieldset>

              <fieldset class="form-group">
                  <label class="profileLabels" for="projectSkillsarea">Enter in Skills Learned During Project</label>
                  <textarea class="form-control" name="skillsUsed" rows="3"></textarea>
                </fieldset>

              <fieldset class="form-group">
                <label class="profileLabels" for="projectEndDate">Photo URL</label>
                <br>
                <input type="text" name="photourl">
              </fieldset>

               <input type="submit" class="button" value="Add Project"/>

            </form>

          </div>
