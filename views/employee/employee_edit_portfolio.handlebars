  <div class="row">
    <div class="medium-4 medium-centered heading_bg">
      <h5>Update Your Portfolio</h5>
    </div>
  </div>
  <div class="row">
    <div class="medium-6 medium-centered instructions">
      <p>Please enter any project(s) you have worked on below.</p>
    </div>
  </div>

  <div class="row">
      <div class="medium-10 columns">
        <div class="card">
          <div class="content">

            <form action="/employee_edit_portfolio" method="post">

              <fieldset class="form-group">
                <label class="profileLabels" for="projectTitle">Project Title</label>
                <input type="text" class="form-control" id="ProjectTitle1" placeholder="Enter Project Title" name="title">
              </fieldset>

              <fieldset class="form-group">
                <label class="profileLabels" for="projectBegDate">Project Beginning Date</label>
