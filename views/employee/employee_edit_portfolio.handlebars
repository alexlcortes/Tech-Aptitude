<div class="header">
  <div class="row">
    <div class="medium-12 columns space2">
    </div>
  </div>
</div> 

<div id="container">
  <div class="two-third"> 
    <a href = "/logout"><i class="fa fa-sign-out fa-3x editButton" aria-hidden="true"></i></a>  
    <div class="row">
      <div class="medium-7 columns">
        <h2 id="mainLogo"><img src="/assets/img/loginBackground/icon-clear-thinkers.jpg" style="color: #D72323" alt="lightBulb" height="60" width="60"> Tech Aptitude</h2>
      </div>
    </div>

    <div style="clear:both"></div>

    <div class="row">
      <div class="medium-10 columns">
        <div class="card">
          <div class="content">
            <h5 class="medium-6 heading_bg">Update Portfolio Information</h5>
            <form action="/employee_edit_portfolio" method="post">
              <fieldset class="form-group">
                <label class="profileLabels" for="projectTitle">Project Title</label>
                <input type="text" class="form-control" id="ProjectTitle1" placeholder="Enter Project Title" name="title">
              </fieldset>

              <fieldset class="form-group">
                <label class="profileLabels" for="projectBegDate">Project Beginning Date</label>
                <br>
                <input type="date" name="startDate">
              </fieldset>

              <fieldset class="form-group">
                <label class="profileLabels" for="projectEndDate">Project Ending Date</label>
                <br>
                <input type="date" name="endDate">
              </fieldset>

               <fieldset class="form-group">
                <label class="profileLabels" for="projectTextarea">Enter in Project Description(Max 250 Char)</label>
                <textarea class="form-control" name="description" rows="3"></textarea>
              </fieldset>

              <fieldset class="form-group">
                  <label class="profileLabels" for="projectSkillsarea">Enter in Skills Learned During Project</label>
                  <textarea class="form-control" name="skillsUsed" rows="3"></textarea>
                </fieldset>

              <fieldset class="form-group">
                <label class="profileLabels" for="projectEndDate">Photo URL</label>
                <br>
                <input type="text" name="photourl">
              </fieldset>
              <input type="submit" class="button" value="Add Project"/>
            </form>
          </div>
        </div>
      </div>
    </div>

  </div><!-- close two third -->
      
<div style="clear:both; height: 40px"></div>
      
</div><!-- end containerPro -->


