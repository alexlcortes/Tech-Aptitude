<div class="header">

  <!-- spacing -->
  <div class="row">
    <div class="medium-12 columns space2">
    </div>
  </div>
</div> 

<div id="container">
  <div class="two-third">

    <!-- logout icon -->
    <a href = "/logout"><i class="fa fa-sign-out fa-3x editButton" aria-hidden="true"></i></a>
    <div class="row">
      <div class="medium-7 columns">
        <h2 id="mainLogo"><img src="/assets/img/loginBackground/icon-clear-thinkers.jpg" style="color: #D72323" alt="lightBulb" height="60" width="60"> Tech Aptitude</h2>   
      </div>

    </div>

  <div style="clear:both"></div>

    <div class="row">
      <div class="medium-3 columns">
        <div class="card">
          <div class="content">

            <!-- Right Picture Nar -->
            <div class="sidebar_right">
            {{#each user}}
              <img src="http://vignette2.wikia.nocookie.net/heman/images/c/c3/Heman83.jpg" style="width:200px">
            {{/each}}
            </div>

            <!-- spacing -->
            <div class="row">
              <div class="medium-12 columns space3">
              </div>
            </div>

              <div class="row">
                <div class="medium-11 medium-centered columns">

                  <!-- social icons -->
                  {{#each social}}
                  {{#if facebook.length}}
                    <a href="{{facebook}}" target="_blank"><i class="fa fa-facebook-official fa-2x fBookIcon" aria-hidden="true"></i></a>
                  {{/if}}
                  {{#if twitter.length}}
                    <a href="{{twitter}}" target="_blank"><i class="fa fa-twitter-square fa-2x twitIcon" aria-hidden="true"></i></a>
                  {{/if}} 
                  {{#if github.length}}
                    <a href="{{github}}" target="_blank"><i class="fa fa-github-square fa-2x" aria-hidden="true"></i></a>
                  {{/if}}
                  {{#if stackoverflow.length}}
                   <a href="{{stackoverflow}}" target="_blank"><i class="fa fa-stack-overflow fa-2x stack" aria-hidden="true"></i></a>
                  {{/if}} 
                  {{#if linkedin.length}}
                    <a href="{{linkedin}}" target="_blank"><i class="fa fa-linkedin-square fa-2x linked" aria-hidden="true"></i></a>
                  {{/if}} 
                  {{/each}}
                  <!-- resume -->
                  {{#each user}}
                  <a href="/assets/resume/{{resume}}">Resume</a>
                  {{/each}}
                </div>
              </div>
          </div>

          <!-- edit wrench -->
          <a href="/employee_social_media"><i class="fa fa-wrench fa-1x editButton" aria-hidden="true"></i></a>
        </div>
      </div>

      <!-- contact card -->
      <div class="medium-6 columns">
        <div class="card">
          <div class="content">
            <div>
              <form action="#" class="TTWForm" method="post" novalidate=""> 
                <div id="field1-container" class="field f_50">
                  {{#each user}}
                  <label for="firstName"></label>         
                  <i class="fa fa-user fa-1x contactIcons" aria-hidden="true"></i>  {{firstName}} {{lastName}}
                  <label for="lastName"></label>
                  <label for="email"></label>
                  <i class="fa fa-envelope-o fa-1x contactIcons" aria-hidden="true"></i>  {{email}}
                  
                  <label for="phone"></label>
                  <i class="fa fa-phone fa-1x contactIcons" aria-hidden="true"></i> {{mobile_number}}

                  <label for="address"></label>
                  <i class="fa fa-home fa-1x contactIcons" aria-hidden="true"></i>  {{street_address}}
                  <label for="city"></label>
                  <i class="fa fa-home fa-1x contactIcons2" aria-hidden="true"></i>  {{city}}, {{state}} {{zip}}
                  <label for="city"></label>
                  {{/each}}
                </div>
              </form>
            </div>
          </div> {{!-- closing content --}}
          <a href="/employee_edit_profile"><i class="fa fa-wrench fa-1x editButton" aria-hidden="true"></i></a>
        </div> <!-- closing card -->
      </div> <!-- closing columns --> 

      <div class="medium-3 columns">
        <div class="content">
        </div>
      </div>

    </div>

  <!-- spacing -->
    <div class="row">
      <div class="medium-12 columns cardSpace">
      </div>
    </div> 
    
    <div class="row">
      <div class="medium-10 columns">
        <div class="card skillsCard">
          <div class="content">

            <h3 class="portText">Skills</h3>
            
            <ul class="vertical dropdown menu" data-dropdown-menu style="max-width: 120px;">
              <li  class="is-dropdown-submenu-parent"><a href="#">Skill Options...</a>
                <ul class="menu">

                  {{#each skillOpt}}
                  <li>
                    <form action="/add_skill" method="post">
                    <input type="hidden" name="skill" value="{{skill}}">                   
                      <button type="submit">{{skill}} </button>
                    </form>
                  </li>
                  {{/each}}
                  

                  {{#if skillsLevels.HTML}}
                    {{skillsLevels.HTML}}
                  {{/if}}
                </ul>
              </li>
            </ul>  
            {{!-- end of dropdown menu --}}
          
          {{!-- placing buttons for each skill that has been added by the drop-down --}}
          <div class="button-group">
          {{#each skills}}
            <a href = "/{{skill}}_test" class="button">{{skill}}</a>
            {{/each}}
          </div>
          {{!-- end of buttons for each skill --}}
            
            {{!-- end of james and alex additions --}}

          </div>
        </div>
      </div>
    </div> <!-- closing row -->

    <!-- spacing -->
    <div class="row">
      <div class="medium-12 columns cardSpace">
      </div>
    </div> 

    <div class="row">
      <div class="medium-10 columns">
        <div class="card">
          <div class="content">
            <h3 class="portText">Portfolio</h3>
              <div class="row">
             {{#each portfolio}}
                <div class="medium-4 columns">
                  <div clas="content">
             <h4>{{title}}</h4>
             <img src="{{photo}}">
             <h5>{{startDate}} - {{endDate}}</h5>
             <h5>{{description}}</h5>
             <h5>{{skillsUsed}}</h5>
                  </div>
                </div>
             {{/each}}
              </div>
          </div>
          <a href="/employee_edit_portfolio"><i class="fa fa-wrench fa-1x editButton" aria-hidden="true"></i></a>
        </div>
      </div>
    </div><!-- closing row -->

  </div><!-- close two third -->
      
<div style="clear:both; height: 40px"></div>
      
</div><!-- end containerPro -->


<div id="footer">

    <div style="clear:both"></div>
    
</div> <!-- END footer -->

